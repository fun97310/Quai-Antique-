{% extends 'base.html.twig' %}

{% block title %}Quai Antique - Inscription{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/style-inscription.css') }}" rel="stylesheet"/> 
{% endblock %}  
{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.nombre_couvert) }}
        {{  form_row(registrationForm.allergie) }}

        <button type="submit" class="btn-register">Register</button>
    {{ form_end(registrationForm) }}

    <a href=" {{ path('app_login') }} ">Se connecter</a>
{% endblock %}
