{% extends 'base.html.twig' %}

{% block title %}Formules index{% endblock %}

{% block body %}
    <h1>Formules index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Composition</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formule in formules %}
            <tr>
                <td>{{ formule.id }}</td>
                <td>{{ formule.composition }}</td>
                <td>{{ formule.prix }}</td>
                <td>
                    {{ include('carte/formules/_delete_form.html.twig') }}
                    <a href="{{ path('app_formules_edit', {'id': formule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_carte_indexedit') }}">RETOUR AU MENUS</a>
    <a href="{{ path('app_formules_new') }}">Create new</a>
{% endblock %}
