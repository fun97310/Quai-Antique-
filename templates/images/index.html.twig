{% extends 'base.html.twig' %}

{% block title %}Images index{% endblock %}

{% block body %}
    <h1>Images index</h1>


        {% for image in images %}
            {% if image.path %}
                <img src="{{ asset('images/' ~ image.path) }}" alt="{{ image.description }}" style="width: 150px;">
                <a href="{{ path('app_images_edit', {'id': image.id}) }}">edit</a>
                {{ include('images/_delete_form.html.twig') }}
            {% else %}
                <p>Aucune image disponible.</p>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
  

    <a href="{{ path('app_images_new') }}">Create new</a>
    <a href="{{ path('app_admin') }}">go back</a>
{% endblock %}

